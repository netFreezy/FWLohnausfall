@using Lohnausfall.Core.Models
<MudDialog>
    <DialogContent>
        <MudText>Soll <b>@Member!.Firstname @Member.Lastname</b> gelöscht werden?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Abbrechen</MudButton>
        <MudButton Variant=Variant.Filled Color=Color.Error OnClick=Submit>Löschen</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Member? Member { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}